<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jumpToDateLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/ad_outline_shape"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Required"
        android:textColor="@color/ad_native_content_text"
        android:textSize="@dimen/_16ssp"
        android:textFontWeight="600"
        android:fontFamily="@font/font_medium"/>

    <TextView
        android:id="@+id/tvValidatoinDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please turn off Developer Options and try again."
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/font_light"
        android:textFontWeight="500"
        android:textColor="@color/ad_native_content_text"
        android:textSize="@dimen/_13ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actionExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ad_outline_shape"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Exit"
            android:textColor="@color/ad_button_primary"
            android:textFontWeight="600"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/actionOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ad_outline_shape"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Turn OFF"
            android:textColor="@color/ad_button_primary"
            android:textFontWeight="600"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/actionRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Retry"
            android:fontFamily="@font/font_medium"
            android:textColor="@color/ad_button_primary"
            android:textFontWeight="600"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>
